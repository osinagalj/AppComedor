<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/confirmed_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginStart="250dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/food_milanesas_con_fritas"></ImageView>


        <TextView
            android:id="@+id/confirmed_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="50dp"

            android:text="Nombre de la Persona"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/confirmed_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmed_nombre"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="2020-01-20"></TextView>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="54dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="273dp"
            android:layout_marginTop="121dp"
            app:srcCompat="@drawable/verde" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>