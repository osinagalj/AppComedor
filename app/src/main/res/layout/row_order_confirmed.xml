<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="wrap_content"
app:cardCornerRadius="3dp"
app:cardElevation="3dp"
app:cardUseCompatPadding="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_confirmed_order_label_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="@string/product_name"
            android:textAlignment="textStart"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/row_confirmed_order_label_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/product_description"
            android:textAlignment="textStart"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/row_confirmed_order_label_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/price"
            android:textAlignment="textStart"
            android:textSize="16sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/row_confirmed_order_imageView_product_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/food_milanesas_con_fritas" />

        <TextView
            android:id="@+id/row_confirmed_order_label_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pendiente_img"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:text="@string/product_units" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/row_confirmed_order_button_remove"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="end"
            app:srcCompat="@drawable/verde"
             />

    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>