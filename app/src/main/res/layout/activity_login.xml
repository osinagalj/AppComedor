<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#105661"
    tools:context="com.example.navigationdrawerpractica.Interfaces.MainActivity"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="132dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_exactas_unicen"
        app:srcCompat="@drawable/logo_exactas_unicen" />

    <TextView
        android:id="@+id/login_comedor"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"

        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="Comedor Universitario UNICEN"
        android:textColor="#fff"
        android:textSize="23sp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:text="DNI"
        android:textColor="#fff"
        android:textColorHighlight="#fff"
        android:textStyle="bold" />

    <EditText

        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="18dp"

        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <TextView

        android:id="@+id/textView4"
        android:layout_below="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrase単a"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:textStyle="bold"
        android:textColor="#fff" />


    <EditText

        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPassword"

        android:textColor="#fff"
        android:textColorHighlight="#fff"
        android:textColorHint="#fff"
        android:textColorLink="#fff" />

    <CheckBox
        android:layout_below="@+id/editTextTextPassword"
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"

        android:text="Recuerdame"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_marginStart="210dp"
        android:layout_marginTop="20dp"

        android:text="多Olvidaste tu contrase単a?"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button"
        android:layout_width="352dp"
        android:layout_height="62dp"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="#0BA0A5"
        android:text="Ingresar"
        android:textColor="#FFF" />

    <TextView

        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginStart="57dp"
        android:layout_marginTop="31dp"
        android:text="多No tienes una cuenta?"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button2"
        android:layout_width="155dp"
        android:layout_height="38dp"
        android:layout_below="@+id/button"
        android:layout_marginStart="210dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Registrarme"
        android:textColor="#FFF"
        android:textColorHighlight="#fff"
        android:textColorHint="#fff" />


</RelativeLayout>