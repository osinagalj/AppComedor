<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    tools:context=".Food.FoodDetail">


    <TextView
        android:id="@+id/text_alimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Alimento"
        android:textSize="24sp"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:id="@+id/imagen_detalleid"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_below="@+id/text_alimento"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="121dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_launcher_background">

    </ImageView>

    <TextView
        android:id="@+id/nombre_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagen_detalleid"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="Goku"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_detalle"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:text="Cantidad:" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"

        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button_add_order"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/editTextNumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#0BA0A5"
        android:text="Realizar orden"
        android:textColor="#FFF" />

    <ImageButton
        android:id="@+id/imageButton_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cross_image" />


</RelativeLayout>