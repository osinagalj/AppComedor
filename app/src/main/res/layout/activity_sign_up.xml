<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.Sign_up"
    android:background="#105661"
    >

    <ImageButton
        android:id="@+id/sign_up_1_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_back"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="48dp"

        android:backgroundTint="@android:color/transparent"
        android:text="Seleccione su categoria"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textColorHighlight="#fff"
        android:textColorHint="#fff"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/sign_up_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Alumno"
        android:layout_centerVertical="true"
        android:textColor="#FFF"
        android:textColorHighlight="#fff"
        android:textColorHint="#fff"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp" />

    <Button
        android:id="@+id/sign_up_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:backgroundTint="@android:color/transparent"
        android:text="Docente"
        android:textColor="#FFF"
        android:textColorHighlight="#fff"
        android:textColorHint="#fff"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_button_1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp" />

    <Button
        android:id="@+id/sign_up_button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/transparent"
        android:text="No Docente"
        android:layout_centerVertical="true"
        android:textColor="#FFF"
        android:textColorHighlight="#fff"
        android:textColorHint="#fff"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_button_2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp" />

    <Button
        android:id="@+id/sign_up_button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:backgroundTint="@android:color/transparent"
        android:text="Externo"
        android:textColor="#FFF"
        android:textColorHighlight="#fff"
        android:textColorHint="#fff"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_button_3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp" />
</androidx.constraintlayout.widget.ConstraintLayout>